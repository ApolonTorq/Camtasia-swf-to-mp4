{
  "name": "camtasia-swf-tool",
  "version": "0.2.0",
  "description": "Flash SWF processing utility for Camtasia-generated files - extract frames/audio and convert to MP4",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "camtasia-swf": "dist/src/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/src/cli.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "postinstall": "echo 'FFmpeg platform-specific packages installed as optional dependencies'"
  },
  "keywords": [
    "jpexs",
    "flash",
    "swf",
    "camtasia",
    "video",
    "mp4",
    "converter",
    "extractor"
  ],
  "author": "Apolon Ivankovic <apolon@torqsoftware.com>",
  "license": "GNU GPLv3",
  "bugs": {
    "url": "https://github.com/ApolonTorq/Camtasia-swf-to-mp4/issues"
  },
  "homepage": "https://github.com/ApolonTorq/Camtasia-swf-to-mp4",
  "engines": {
    "node": ">=22.0.0"
  },
  "dependencies": {
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "boxen": "^8.0.1",
    "chalk": "^5.3.0",
    "command-line-usage": "^7.0.3",
    "commander": "^12.1.0",
    "fluent-ffmpeg": "^2.1.3",
    "glob": "^11.0.0",
    "gradient-string": "^3.0.0",
    "ora": "^8.1.0"
  },
  "optionalDependencies": {
    "@ffmpeg-installer/darwin-arm64": "^4.1.5",
    "@ffmpeg-installer/darwin-x64": "^4.1.0",
    "@ffmpeg-installer/linux-ia32": "^4.1.0",
    "@ffmpeg-installer/linux-x64": "^4.1.0",
    "@ffmpeg-installer/win32-ia32": "^4.1.0",
    "@ffmpeg-installer/win32-x64": "^4.1.0"
  },
  "devDependencies": {
    "@types/command-line-usage": "^5.0.4",
    "@types/fluent-ffmpeg": "^2.1.25",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.8.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/test/**/*.test.ts"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/test/setup.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts"
    ],
    "testTimeout": 60000,
    "maxWorkers": 1,
    "verbose": true,
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "transform": {
      "^.+\\.ts$": [
        "ts-jest",
        {
          "useESM": true
        }
      ]
    },
    "transformIgnorePatterns": [
      "node_modules/(?!(chalk|boxen|gradient-string|ora|command-line-usage)/)"
    ],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    }
  }
}
